<%= simple_form_for(design, html: {id: "new_design", class: "dropzone"}) do |f| %>
  <div class="col col-xs-5">
    <%= f.input :name %>
    <%= f.input :story, as: :text, placeholder: "Write the story of your design" %>
    <div id="categories">
      <label for="design_theme" class="form-control-label">Theme</label>
      <br>
      <% @themes.each do |category| %>
      <%= f.radio_button :theme, category, class: "hidden" %>
      <%= f.label category, category, class: "btn" %>
      <% end %>
    </div>
      <div class="button" >
        <input type="button" id="new_design_btn" class="btn btn-danger" value="Create design" />
      </div>
  </div>

  <div class="col col-xs-7">
    <div class="row">
      <div class="col col-xs-12" id="droparea">
        <div id="dropzonePreview" class="dz-default dz-message dz-clickable">
          <span>Drag or Drop your designs here to upload</span>
        </div>
      </div>
    </div>
  </div>

<% end %>

<%= javascript_pack_tag "pages/new" %>
