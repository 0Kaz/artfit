
<div class="banner" style="background-image: linear-gradient(rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1499448189785-e9901667f37f?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=580baa48b2370592b1db5cedb96614c7&auto=format&fit=crop&w=1051&q=80')">

</div>
<h1><%= @design.name %></h1>
<p>Price: 250 Dirhams</p>


<div class="container">
  <div class="form-group">
    <div class="row">
      <div class="col col-xs-6">

      </div>
      <div class="col col-xs-6">
        <%= simple_form_for [@design, @product] do |f| %>
          <%= f.input :size, collection: ["S","M","L"] %>
          <%= f.input :quantity, input_html: {min: 0} %>
          <%= f.input :unit_price, :as => :hidden, :input_html => { :value => "250" } %>
          <%= f.submit "Add to cart", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
